{
  "name": "simple-sysinfo-app",
  "version": "0.0.2",
  "description": "Simple System Information Electron App",
  "license": "MIT",
  "author": "Chunseong MediaConnect",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "systeminformation": "^5.27.7"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.chunseong.sysinfoapp",
    "productName": "Simple System Info",
    "executableName": "sysinfoapp",
    "files": [
      "index.html",
      "index.js",
      "renderer.js",
      "assets/**/*",
      "fonts/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "directories": {
      "output": "dist"
    },
    "compression": "maximum"
  }
}
